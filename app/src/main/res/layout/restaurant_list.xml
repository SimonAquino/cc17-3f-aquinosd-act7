<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/restaurant_bg">

    <ImageView
        android:id="@+id/restaurantlogo"
        android:layout_width="455dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-1dp"
        app:srcCompat="@drawable/restaurant_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="260dp">

        <Button
            android:id="@+id/btn_grumpyjoe"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:drawableLeft="@drawable/grumpy_joe_logo"
            />

        <Button
            android:id="@+id/btn_pizzavolante"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/volante_logo" />

        <Button
            android:id="@+id/btn_vizcos"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:drawableLeft="@drawable/vizco_s_logo" />


    </LinearLayout>

</RelativeLayout>